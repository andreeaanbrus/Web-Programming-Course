<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="2.5">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>myweb.controller.LoginController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CitiesController</servlet-name>
        <servlet-class>myweb.controller.CitiesController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitiesController</servlet-name>
        <url-pattern>/CitiesController/*</url-pattern>
    </servlet-mapping>
</web-app>


